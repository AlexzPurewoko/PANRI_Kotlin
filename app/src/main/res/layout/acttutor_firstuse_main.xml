<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/acttutor_id_mainlayout"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/acttutor_id_placeholder"/>
    <!-- indicators -->
    <LinearLayout
            android:id="@+id/acttutor_id_layoutIndicators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_above="@id/acttutor_id_layoutbtn"
            android:layout_gravity="center|center_horizontal"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/acttutor_id_layoutbtn"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/acttutor_id_btnprev"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="@string/acttutor_string_btnback"
                android:foreground="@color/color_transparent"
                android:background="?attr/selectableItemBackground"
                android:layout_alignParentStart="true"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/acttutor_id_btnnext"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/acttutor_string_btnnext"
                android:foreground="@color/color_transparent"
                android:background="?attr/selectableItemBackground"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</RelativeLayout>