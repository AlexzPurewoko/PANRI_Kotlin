<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0a3a3a3"
    android:gravity="bottom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/layout_onnotselected_padd_5"
        android:paddingLeft="@dimen/layout_onnotselected_padd_5"
        android:paddingRight="@dimen/layout_onnotselected_padd_5">

        <ImageView
            android:layout_width="@dimen/layout_onnotselected_imgpetani_mikir_width"
            android:layout_height="@dimen/layout_onnotselected_imgpetani_mikir_height"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/petani_mikir" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_onnotselected_marginleft_90"
            android:layout_marginTop="@dimen/layout_onnotselected_marginleft_20"
            android:background="@drawable/ic_textbox_mikir"
            android:orientation="vertical">

            <TextView
                android:id="@+id/layoutonselected_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/finish_diagnose_string_message"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/layout_onnotselecte_textsize_10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="9">

                <androidx.cardview.widget.CardView
                    android:id="@+id/layoutonselected_id_card_ya"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    app:cardBackgroundColor="@android:color/holo_blue_dark"
                    app:cardCornerRadius="@dimen/layout_onnotselected_contentpaddingcard"
                    app:contentPaddingBottom="@dimen/layout_onnotselected_contentpaddingcard"
                    app:contentPaddingTop="@dimen/layout_onnotselected_contentpaddingcard">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="YA"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/layout_onnotselecte_textsize_10sp" />
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/layoutonselected_id_card_tidak"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    app:cardBackgroundColor="@android:color/holo_red_dark"
                    app:cardCornerRadius="@dimen/layout_onnotselected_contentpaddingcard"
                    app:contentPaddingBottom="@dimen/layout_onnotselected_contentpaddingcard"
                    app:contentPaddingTop="@dimen/layout_onnotselected_contentpaddingcard">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TIDAK"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/layout_onnotselecte_textsize_10sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>